	[		
		{
			pic: 'images/bouquet_1.png',
			name: 'Новогодний подарок',
			price: '2000 руб.'
		},
		{
			pic: 'images/bouquet_2.png',
			name: 'Букет из красных роз, 1000 шт.',
			price: '5589 руб.'
		},
		{
			pic: 'images/bouquet_3.png',
			name: 'Букет из альстромерий и коробка конфет Rafaello',
			price: '1562 руб.'
		},
		{
			pic: 'images/bouquet_4.png',
			name: 'Новогодний подарок',
			price: '2000 руб.'
		},
		{
			pic: 'images/bouquet_5.png',
			name: 'Букет из красных роз, 1000 шт.',
			price: '5589 руб.'
		},
		{
			pic: 'images/bouquet_6.png',
			name: 'Букет из альстромерий и коробка конфет Rafaello',
			price: '1562 руб.'
		},
	]
each item, i in catalog
	.col-phablet-1-2.col-tablet-1-3
		.product
			a(href="#").product__pic
				img(src=item.pic)
				if (i==0)
					span.burst-12 Хит
				if (i==1)
					span.circle New
				if (i==2)
					span.rectangle Акция
			.product__name=item.name
			.product__price=item.price
			a(href="#").btn
				|Заказать
	.line-mobileonly
	if (i==1 || i==3)
		.clearfix-phablet
		.line-phablet
	if (i==2)
		.clearfix-tablet
		.line-tablet